local player = game.Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")

-- Create ScreenGui
local gui = Instance.new("ScreenGui")
gui.Name = "EggESPLoadingScreen"
gui.IgnoreGuiInset = true
gui.ResetOnSpawn = false
gui.Parent = playerGui

-- Black Background
local blackFrame = Instance.new("Frame", gui)
blackFrame.BackgroundColor3 = Color3.new(0, 0, 0)
blackFrame.Size = UDim2.new(1, 0, 1, 0)

-- Main Loading Box
local box = Instance.new("Frame", blackFrame)
box.Size = UDim2.new(0.5, 0, 0.25, 0)
box.Position = UDim2.new(0.25, 0, 0.375, 0)
box.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
box.BorderSizePixel = 0
box.BackgroundTransparency = 0.1

Instance.new("UICorner", box).CornerRadius = UDim.new(0, 12)

-- Title
local title = Instance.new("TextLabel", box)
title.Text = "Egg-esp-predictor"
title.Size = UDim2.new(1, 0, 0.3, 0)
title.Position = UDim2.new(0, 0, 0.05, 0)
title.TextColor3 = Color3.new(1, 1, 1)
title.BackgroundTransparency = 1
title.TextScaled = true
title.Font = Enum.Font.GothamBold

-- Subtitle
local subtitle = Instance.new("TextLabel", box)
subtitle.Text = "LOADING PLEASE WAIT"
subtitle.Size = UDim2.new(1, 0, 0.2, 0)
subtitle.Position = UDim2.new(0, 0, 0.35, 0)
subtitle.TextColor3 = Color3.new(0.8, 0.8, 0.8)
subtitle.BackgroundTransparency = 1
subtitle.TextScaled = true
subtitle.Font = Enum.Font.Gotham

-- Progress Bar Container
local barContainer = Instance.new("Frame", box)
barContainer.Size = UDim2.new(0.9, 0, 0.18, 0)
barContainer.Position = UDim2.new(0.05, 0, 0.7, 0)
barContainer.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
barContainer.BorderSizePixel = 0
Instance.new("UICorner", barContainer).CornerRadius = UDim.new(1, 0)

-- Progress Bar Fill
local barFill = Instance.new("Frame", barContainer)
barFill.Size = UDim2.new(0, 0, 1, 0)
barFill.BackgroundColor3 = Color3.fromRGB(0, 170, 255)
barFill.BorderSizePixel = 0
Instance.new("UICorner", barFill).CornerRadius = UDim.new(1, 0)

-- Percentage Text
local percentText = Instance.new("TextLabel", barContainer)
percentText.Size = UDim2.new(1, 0, 1, 0)
percentText.Position = UDim2.new(0, 0, 0, 0)
percentText.BackgroundTransparency = 1
percentText.TextColor3 = Color3.new(1, 1, 1)
percentText.TextScaled = true
percentText.Font = Enum.Font.GothamBold
percentText.Text = "0%"

-- Animate Loading Bar
task.spawn(function()
	for i = 1, 100 do
		barFill:TweenSize(UDim2.new(i/100, 0, 1, 0), "Out", "Sine", 0.02, true)
		percentText.Text = i .. "%"
		subtitle.Text = "LOADING PLEASE WAIT"
		task.wait(1.00)
	end
	task.wait(0.4)
	gui:Destroy() -- Remove the loading screen
end)
