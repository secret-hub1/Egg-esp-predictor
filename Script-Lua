local player = game.Players.LocalPlayer
local screenGui = Instance.new("ScreenGui", player:WaitForChild("PlayerGui"))
screenGui.ResetOnSpawn = false
screenGui.IgnoreGuiInset = true
screenGui.Name = "EggESPLoading"

-- Black Background
local bg = Instance.new("Frame", screenGui)
bg.BackgroundColor3 = Color3.new(0, 0, 0)
bg.Size = UDim2.new(1, 0, 1, 0)
bg.Position = UDim2.new(0, 0, 0, 0)

-- Center Box
local box = Instance.new("Frame", bg)
box.Size = UDim2.new(0.5, 0, 0.2, 0)
box.Position = UDim2.new(0.25, 0, 0.4, 0)
box.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
box.BorderSizePixel = 0
box.BackgroundTransparency = 0.2

-- UI Corner
local uiCorner = Instance.new("UICorner", box)
uiCorner.CornerRadius = UDim.new(0, 10)

-- Title Text
local title = Instance.new("TextLabel", box)
title.Size = UDim2.new(1, 0, 0.4, 0)
title.Position = UDim2.new(0, 0, 0, 0)
title.BackgroundTransparency = 1
title.Text = "Egg-esp-predictor"
title.TextColor3 = Color3.new(1, 1, 1)
title.TextScaled = true
title.Font = Enum.Font.GothamBold

-- Subtitle Text
local subtitle = Instance.new("TextLabel", box)
subtitle.Size = UDim2.new(1, 0, 0.3, 0)
subtitle.Position = UDim2.new(0, 0, 0.4, 0)
subtitle.BackgroundTransparency = 1
subtitle.Text = "LOADING PLEASE WAIT"
subtitle.TextColor3 = Color3.new(1, 1, 1)
subtitle.TextScaled = true
subtitle.Font = Enum.Font.Gotham

-- Progress Bar Background
local barBack = Instance.new("Frame", box)
barBack.Size = UDim2.new(0.9, 0, 0.15, 0)
barBack.Position = UDim2.new(0.05, 0, 0.75, 0)
barBack.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
barBack.BorderSizePixel = 0

local barCorner = Instance.new("UICorner", barBack)
barCorner.CornerRadius = UDim.new(1, 0)

-- Progress Fill
local barFill = Instance.new("Frame", barBack)
barFill.Size = UDim2.new(0, 0, 1, 0)
barFill.BackgroundColor3 = Color3.fromRGB(0, 200, 255)
barFill.BorderSizePixel = 0

local fillCorner = Instance.new("UICorner", barFill)
fillCorner.CornerRadius = UDim.new(1, 0)

-- Animate Progress Bar
task.spawn(function()
	for i = 1, 100 do
		barFill.Size = UDim2.new(i / 100, 0, 1, 0)
		subtitle.Text = "LOADING PLEASE WAIT - " .. i .. "%"
		task.wait(0.05) -- Speed of loading
	end

	task.wait(0.5)
	screenGui:Destroy() -- Remove loading screen
end)
